{
  "name": "voice-of-the-shepherd-scripts",
  "version": "1.0.0",
  "description": "Image and audio generation scripts for Voice of the Shepherd",
  "main": "generate-images.ts",
  "scripts": {
    "// === IMAGE GENERATION SCRIPTS ===": "",
    "generate-images": "bun run generate-images.ts",
    "generate-images-resume": "bun run generate-images-resume.ts",
    "generate-images-force": "bun run generate-images-resume.ts --force",
    "regenerate-specific": "bun run regenerate-specific.ts",
    "replace-with-existing": "bun run replace-with-existing.ts",
    "// === AUDIO GENERATION SCRIPTS ===": "",
    "generate-audio": "bun run generate-audio.ts",
    "generate-audio-test": "bun run generate-audio.ts --test",
    "generate-audio-production": "bun run generate-audio.ts --production",
    "generate-audio-resume": "bun run generate-audio-resume.ts",
    "generate-audio-force": "bun run generate-audio-resume.ts --force",
    "generate-audio-status": "bun run generate-audio.ts --status",
    "test-audio-single": "bun run generate-audio.ts --test --test-ids=1",
    "test-audio-setup": "bun run test-audio-setup.ts",
    "// === BACKGROUND MUSIC GENERATION SCRIPTS ===": "",
    "generate-music": "bun run generate-background-music.ts",
    "generate-music-test": "bun run generate-background-music.ts --test",
    "generate-music-production": "bun run generate-background-music.ts --production",
    "generate-music-status": "bun run generate-background-music.ts --status",
    "generate-music-list": "bun run generate-background-music.ts --list",
    "// === UTILITY SCRIPTS ===": "",
    "test-single": "bun run test-single-image.ts",
    "status": "bun run check-status.ts"
  },
  "dependencies": {
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
